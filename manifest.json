{
  "name": "Player Two",
  "version":"1.0",
  "manifest_version":2,
  "description": "White Noise for your Google Searches",
  "permissions": ["storage","activeTab","tabs","http://*/","https://*/"],
  "browser_action": {
    "default_icon": "icons/MushroomIcon.png",
    "default_title": "Turn on White Noise"
    // "default_popup": "popup.html"
  },
  "icons":{
    "16":"/icons/MushroomIcon.png",
    "48":"/icons/Mushroom-48.png",
    "128":"/icons/Mushroom---Super-128.png"
  },
  "background": {
    //"page":"background.html",
    "scripts": ["background.js","red.js","search.js"],
    "persistent": false
    },

  //these run whenever those matches are found...
  // "content_scripts": [ {
  //   "js": ["background.js","red.js","search.js"],
  //   // "css": ["customStyles.css"],
  //   "matches": [ "http://www.google.com/*", "https://www.google.com/*"]
  // }],

  "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
  }
}